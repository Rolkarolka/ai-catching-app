<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:contentDescription="userAvatar"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="15dp"
                    android:text="Username" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/firstUserAttribute"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rhombus"
                        android:gravity="center"
                        android:text="M" />

                    <TextView
                        android:id="@+id/secondUserAttribute"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rhombus"
                        android:gravity="center"
                        android:text="38" />

                    <View
                        android:id="@+id/thirdUserAttribute"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rhombus"
                        android:backgroundTint="@color/black" />

                    <TextView
                        android:id="@+id/appendUserAttribute"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rhombus"
                        android:gravity="center"
                        android:text="+" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </Toolbar>



</LinearLayout>